{
  "name": "gh-author-info",
  "version": "0.0.1",
  "description": "Name and email address from GitHub username (GHActions actor)",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc -b",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "watch": "tsc-watch --onSuccess \"node --harmony-top-level-await ./dist/index.js $npm_config_username\"",
    "watch:example": "tsc-watch --onSuccess \"npm run watch --username=octocat\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DerekRoberts/gh-author-info.git"
  },
  "keywords": [
    "cli",
    "github",
    "github-actions",
    "username",
    "name",
    "email address"
  ],
  "author": {
    "name": "Derek Roberts",
    "email": "derek.roberts@gmail.com",
    "url": "https://github.com/derekroberts"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/DerekRoberts/gh-author-info/issues"
  },
  "homepage": "https://github.com/DerekRoberts/gh-author-info#readme",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "tsc-watch": "^4.5.0",
    "typescipt": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "type": "module"
}
